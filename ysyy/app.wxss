/**app.wxss**/
/* 相对定位 */
.pr{
    position: relative;
}
/* 浮动 */
.fl{
    float: left;
}
.fr{
    float: right;
}
/* 清除浮动 */
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 价格 */
.priceFont{
color: #ffcd46;
}
/* 搜索框 */
.search icon {
    position: absolute;
    right: 0rpx;
    top: 30rpx;
    z-index: 11;
}

.search .search_input{
    height: 48rpx;
    width: 100%;
    margin: 15rpx 30rpx;
    padding: 5rpx 20rpx;
    border-radius: 34rpx;
    background-color: rgb(242,242,242);
    font-size: 30rpx;
    padding-left: 20rpx;
}
/* 圆形复选 */
checkbox{
    /* zoom: 50%; */
      visibility: hidden;  
}
text{
    font-size: 24rpx;
}
label{
     position: relative; 
}
.checkbox{
    position: absolute;
    top:5rpx;
    border-radius: 50%;
    height: 24rpx;
    width: 24rpx;
    overflow: hidden;
}
.checkbox2{
    border: 1px solid #ccc;
}
.checkImg{
    position: absolute;
    left: 2rpx;
    top:6rpx;
    width: 26rpx;
    height: 26rpx;
}
/* 底部 */
.tabBar{
    display: flex;
    height: 90rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #ccc;
    background-color: #f0f0f0;
}
.tabBar .tabBar_nav{
    width: 25%;
    position: relative;
    padding: 15rpx 0 0 80rpx;
}
.tabBar .tabBar_nav image{
    width: 50rpx;
    height:50rpx;
}
.tabBar .tabBar_nav text{
    font-size: 16rpx;
    position: absolute;
    top: 70rpx;
    left: 90rpx;
}
.tabBar .tabBar_nav .car{
    left: 86rpx;
}
.tabBar .tabBar_nav .profile{
    left: 75rpx;
}

/* 星星 */
.plgun .star{
    width: 22rpx;
    height: 22rpx;
}
.plgun text{
    font-size: 16rpx;
    color: #9e9e9e;
}
