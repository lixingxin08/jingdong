/* pages/profile/profile.wxss */
.profile-top{
    width: 100%;
    position: relative;
}
.profile-top text{
    color: #fff;
}
.profile-top-beijing{
    width: 100%;
    height: 560rpx; 
    overflow: hidden;
}
.profile-top-beijing-img{
    width: 100%;
    height: 720rpx;
}
.profile-top-userImg{
    position: absolute;
    border-radius: 50%;
    top: 100rpx;
    left: 320rpx;
    width: 110rpx;
    height: 110rpx;
}
.profile-top-userName{
    font-size: 28rpx;
    position: absolute;
    top:230rpx;
    text-align: center;
    width: 100%;
}
.profile-top-location{
    font-size: 24rpx;
    position: absolute;
    bottom: 24rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.profile-top-location image{
    vertical-align: center;
    height: 38rpx;
    width: 36rpx;
    margin-right: 10rpx;
}
.profile-main{
    padding-top: 40rpx;
    display: flex;
    justify-content: space-around;
    flex-flow: wrap;
}
.profile-main navigator{
    width: 24%;
    text-align: center;
    margin-bottom: 80rpx;
}
.profile-list{
    height: 80rpx;
}
.profile-list-icon{
    height: 34rpx;
    width: 34rpx;
    display: block;
    margin: 0 auto;
}