/* pages/location/location.wxss */
@import "../../app.wxss";
.header{
    display: flex;
    position: relative;
    flex-wrap:wrap;
    border-top: 2px solid #e3e3e3;
}
/* 定位 */
.header .location{
    width: 34rpx;
    height: 40rpx;
    position: absolute;
    left:22rpx;
    top: 22rpx;
}
.shop{
    font-size: 28rpx;
    position: absolute;
    left: 62rpx;
    top: 20rpx;
    color: rgb(77,77,77)
}
.header .relocate{
    width: 40rpx;
    height: 40rpx;
    position: absolute;    
    right:136rpx;
    top: 16rpx;    
}
.relocateText{
    font-size: 28rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx; 
}
/* 搜索框 */
.search {
    display: flex;
    position: relative;
    width: 100%;
    top: 60rpx;
    border-bottom: 6rpx solid #f2f2f2;
}
.search .search_input{
    background-color: #ffffff;
    border: 1px solid #f3f3f3;
}
.search icon{
    right: 50rpx;
}
/* 商店列表 */
.cells {
    border-top: 6rpx solid #f2f2f2;
    background-color: #fff;
    margin-top: 72rpx;
}

.cells .item {
    position: relative;    
    display: flex;
    align-items: flex-start;
    border-bottom: 1rpx solid #eee;
}

.cells .item .shop_logo{
    width: 108rpx;
    height: 108rpx;
    margin: 32rpx 30rpx 17rpx 19rpx;
}

.cells .item .meta {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 10rpx 0;
    font-size: 30rpx;
}

.cells .item .meta .name {
    color: #404040;
    padding: 12rpx 0 0 0; 
    font-size:32rpx;
    font-weight: 700;
}
.cells .item .plgun{
    padding-top: 10rpx;
}
.cells .item .plgun .star{
    width: 22rpx;
    height: 22rpx;
    margin-right: 6rpx;
}
