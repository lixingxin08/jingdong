/* pages/submitOrder/submitOrder.wxss */
page{
    background-color: #f2f2f2;
    height: 100%;
}
view{
    box-sizing: border-box;
}
.main{
    width: 100%;
    padding: 8rpx 20rpx 0 20rpx;
}
/* 地址 */
.sub-location{
    font-weight: 700;
    border-radius: 12rpx;
    position: relative;
    height: 114rpx;
    background-color: #fff;
    padding-top: 24rpx;
    margin-bottom: 4rpx;
}
.sub-location-dingwei{
    height: 42rpx;
    width: 30rpx;
    position: absolute;
    left: 150rpx;
    top: 34rpx;
}
.sub-location text{
    display: block;
    text-align: center;
    color: #4d4d4d;
}
.sub-location-title{
    font-size: 32rpx;
}
.sub-location-phone{
    font-size:28rpx;
}
.sub-location-right{
    height: 22rpx;
    width: 12rpx;
    position: absolute;
    right: 20rpx;
    top:40rpx;
}
/* 店铺 */
.sub-shops{
    height: 62rpx;
    background-color: #fff;
    position: relative;
    border-bottom: 1px solid #f2f2f2;
}
.sub-shops-logo{
    position: absolute;
    height: 30rpx;
    width: 34rpx;
    top: 17rpx;
    left: 20rpx;
}
.sub-shops text{
    display: block;
    padding-left: 66rpx;
    line-height: 62rpx;
    color: #4d4d4d;
    font-size: 24rpx;
}
/* 订单列表 */
.sub-order-list{
    height:102rpx;
    padding:12rpx 0 0 27rpx;
    background-color: #fff;
    position: relative;
    margin-bottom: 1px;
}
.sub-order-list-img{
    height: 80rpx;
    width: 80rpx;
}
.sub-order-list-detail{
    position: absolute;
    top: 0;
    left: 138rpx;
    padding-top: 19rpx;
}
.sub-order-list-detail text{
    display: block;
}
.sub-order-list-detail-title{
    font-weight: 700;
    font-size: 26rpx;
    color: #5e5e5e;
}
.sub-order-list-detail-price{
    margin-top: 20rpx;
    font-size: 20rpx;
    text-decoration: line-through;
    color: #4d4d4d;
}
.sub-order-list-detail-number{
    font-size: 26rpx;
    color: #7c7c7c;
    position: absolute;
    top: 20rpx;
    right: 240rpx;
}
.sub-order-list-detail-sellprice{
    font-size: 24rpx;
    position: absolute;
    color: #ffcd46;
    right: 30rpx;
    bottom:12rpx;
}
.sub-order-peisong{
    position: relative;
    margin-top: 6rpx;
    height: 62rpx;
    background-color: #fff;
}
.sub-order-peisong image{
    position: absolute;
    height: 30rpx;
    width: 30rpx;
    top: 16rpx;
    left: 20rpx;
}
.sub-order-peisong text{
    padding-left: 60rpx;
    line-height: 62rpx;
    font-size: 24rpx;
    color: #4d4d4d;
}
.sub-order-peisong-list{
    padding-left: 30rpx;
    margin-top: 1px;
    height: 60rpx;
    background-color: #fff;
    margin-bottom: 6rpx;
    display: flex;
    align-items:center;
}
.sub-order-peisong-list-button{
    vertical-align: middle;    
    display:inline-block;
    height: 36rpx;
    line-height: 36rpx;
    width: 111rpx;
    text-align: center;
    margin-right: 30rpx;
    border-radius: 16rpx;
    border:1px solid #c7c7c7;
    color: #c7c7c7;
}
.sub-order-peisong-list .on{
    color: #ffcf3d;
    border: 1px solid #ffcf3d;
}
.sub-order-coupon{
    height: 60rpx;
    margin-bottom: 4rpx;
    background-color: #fff;
}
.sub-order-coupon text{
    font-size: 22rpx;
    color: #4d4d4d;
}
.sub-order-coupon text:first-child{
    float: left;
    padding: 18rpx 0 0 20rpx;
}
.sub-order-coupon text:nth-child(2){
    float: right;
    padding: 18rpx 20rpx 0 0;
}
.sub-order-total{
    height: 60rpx;
    background-color: #fff;    
}
.sub-order-total text{
    display: block;
    text-align: right;
    padding:17rpx 20rpx 0 0;    
    color: #f4414e;
}
.dian{
    height: 100rpx;
    width: 20rpx;
}
.sub-order-foot{
    height: 98rpx;
    bottom: 0;
    position: fixed;
    width: 100%;
    background-color: #626262;
}
.sub-order-foot text{
    color: #fff;
    font-size: 26rpx;    
    line-height: 98rpx;    
}
.sub-order-foot-total{
    float: left;
    padding-left: 20rpx;
}
.sub-order-foot-sub{
    float: right;
    width: 299rpx;
    height: 98rpx;
    background-color: #ffcd46;
    text-align: center;
}