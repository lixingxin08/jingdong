/* pages/list/list.wxss */
@import '../../app.wxss';
.slides{
    height: 458rpx;
    width: 100%;
    border-bottom: 1px solid #f1f1f1;
}
.goodsPic{
    height: 458rpx;
    padding-top: 44rpx;
    box-sizing: border-box;
    width: 100%;
    background-color: #fff;
}
.goodsPic image{
    display: block;
    width: 570rpx;
    height: 380rpx;
    margin: 0rpx auto; 
}

.goodsDetail{
    position: relative;
    height: 210rpx;
    border-bottom: 1px solid #f1f1f1;
}
.goodsDetail-list{
    padding:20rpx;
}
.goodsDetail-list-title{
    font-size: 28rpx;
    font-weight: 700;
    color: #4d4d4d;
    margin-bottom: 20rpx;
}
.goodsDetail-list-detail,.goodsDetail-sales{
    display: block;
    font-size: 20rpx;
    color: #808080;
}
.goodsDetail-list-detail{
    margin-top: 16rpx;
}
.goodsDetail-sales{
    position: absolute;
    top:30rpx;
    right:20rpx;
}
.goodsDetail-car{
    position: absolute;
    right:20rpx;
    bottom:29rpx;
    width: 156rpx;
    height: 44rpx;
    background-color: #ffcd46;
    border-radius: 10rpx;
}
.goodsDetail-car text{
    display: block; 
    font-size: 28rpx;
    color:#fff;
    line-height: 44rpx;
    text-align: center;
}
.goodsDetail-num{
    position: absolute;
    right:300rpx;
    bottom:20rpx;
}
.goodsDetail-price{
    width: 92rpx;
    height: 44rpx;
    font-size: 28rpx;
    font-weight:  700;
    background-color: #e6e6e6;
    border-radius: 15rpx;
    line-height: 44rpx;
    text-align: center;
    color: #ffcd46;
    position: absolute;
    left: 19rpx;
    bottom: 24rpx;
}

.goodsComment{
    height: 66rpx;
    border-bottom: 1rpx solid #f1f1f1;    
}
.goodsComment-title{
    float: left;
    padding-left: 20rpx;
    line-height: 66rpx;
}
.goodsComment-title text:nth-child(1){
    font-size: 22rpx;
    color: #4d4d4d;
}
.goodsComment-title text:nth-child(2){
    font-size: 18rpx;
    color: #4d4d4d;
}
.goodsComment-num{
    float: right;
    line-height: 66rpx;
    padding-right: 20rpx;
    color: #5e5e5e;
}

.goodsRecommend{
    height: 260rpx;
}
.goodsRecommend-title{
    padding-left: 250rpx;
}
.goodsRecommend-line{
    height: 4rpx;
    width: 68rpx;
    background-color: #4d4d4d;
    display: inline-block;
    position: relative;
    bottom:8rpx;
}
.goodsRecommend-title text{
    font-size: 24rpx;
    color: #4d4d4d;
    padding: 0 12rpx;
    font-weight: 700;
}
.goodsRecommend-img{
    margin-top: 16rpx;
    width: 750rpx;
    height: 226rpx;
}
.goodsRecommend-detail{
    margin-bottom: 68rpx;
}
.goodsRecommend-detail-title{
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #4d4d4d;
    font-weight: 700;
}
.goodsRecommend-detail-suggest{
    margin:4rpx 0 0 20rpx;
    color: #808080;
}
.goodsRecommend-detail-price{
    position: absolute;
    bottom: -38rpx;
    color: #ffcd46;
    left: 20rpx;
}
.goodsRecommend-detail-cosPrice{
    position: absolute;
    font-size: 20rpx;
    bottom: -38rpx;
    color: #5f5f5f;
    left: 76rpx;
}
.goodsRecommend-detail-yuding{
    position: absolute;
    font-size: 22rpx;
    color: #fff;
    height: 36rpx;
    width: 126rpx;
    background-color: #ffcd46;
    line-height: 36rpx;
    text-align: center;
    border-radius:8rpx;
    right: 22rpx;
    bottom: -34rpx;
}
/* 预定详情介绍 */
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center; 
    line-height: 80rpx;}  
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 50%;  
    color: #777777;  
}
.on{ 
    color: #da7c0c;  
    border-bottom: 5rpx solid #da7c0c;
}  
  
.swiper-box{ 
    display: block; 
    height: 100%; 
    width: 100%; 
    overflow: hidden; 
}  
.swiper-box .swiper-box-detail{  
    text-align: center;  
}  
.swiper-box .swiper-box-detail-img{
    width: 100%;
}
/* 预定详情介绍结束 */

.swiper-box-pinglun{
    background-color: #f2f2f2;
}
.assess-list{
    position: relative;
    background-color: #fff;
    margin-bottom: 6rpx;
    padding-bottom: 14rpx;
}
.assess-list-head{
    margin: 14rpx 0 0 20rpx;
    height: 48rpx;
    width: 48rpx;
}
.assess-list-name{
    position: absolute;
    top: 20rpx;
    left: 88rpx;
}
.assess-list-plgun{
    display: inline-block;
    font-size: 16rpx;
    color: #808080;
    margin:56rpx 0 0 20rpx;
}
.plgun{
    margin-top: -20rpx;
    margin-left: 88rpx;
}
.plgun text{
    font-size: 16rpx;
}
.assess-list-text{
    padding-bottom: 14rpx;
    display: block;
    padding-left: 88rpx;
    font-size: 20rpx;
}
.assess-list-goods{
    padding-left: 88rpx;
    height: 96rpx;
}
.assess-list-goods-img{
    height: 96rpx;
    width: 127rpx;
    margin-right: 26rpx;
}


.goodsPay{
    height:98rpx;
    width: 100%;
    position: fixed;
    bottom:0;
}
.goods-car{
    float: left;
    width: 50%;
    height: 98rpx;
    background-color: #4d4d4d;
}
.goods-car text{
    display: block;
    height: 98rpx;
    line-height: 98rpx;
    color: #fff;
    text-indent: 40rpx;
    font-size: 32rpx;    
}
.goods-pay{
    float: right;  
    width: 50%;
    height: 98rpx;
    background-color: #ffcd46;
}
.goods-pay text{
    display: block;
    height: 98rpx;
    line-height: 98rpx;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
}
.dian{
    height: 108rpx;
}