/* pages/recommend/recommend.wxss */
page{
    background-color: #f7f7f7;
    height: 100%;
}
.main{
    padding: 10rpx 20rpx 0;
    box-sizing: border-box;
    height: 100%;
}
.recommend-list{
    margin-top: 6rpx;
    height: 362rpx;
    background-color: #ffffff;
}
.recommend-list-img{
    width: 100%;
    height: 218rpx;
}
.recommend-list-title{
    font-weight: 700;
    font-size: 28rpx;
    margin-left: 10rpx;
    float: left;
    color: #4d4d4d;
}
.recommend-list-detail{
    width: 100%;
    float: left;
    font-size: 24rpx;
    margin:10rpx 0 0 10rpx;
    color: #808080;    
}
.recommend-list-price{
    float: left;
    color: #ffcd46;
    margin-top: 16rpx;
    margin-left: 15rpx;
}
.recommend-list-cosPrice{
    float: left;
    margin-top: 24rpx;
    font-size: 16rpx;
    text-decoration: line-through;
}
.recommend-list-buy{
    float: right;
    margin-right: 30rpx;
    font-size: 24rpx;
    height: 36rpx;
    width: 126rpx;
    background-color: #ffcd46;
    color: #fff;
    border-radius: 8rpx;
    text-align: center;
    line-height: 36rpx;
}
