/* pages/comment/comment.wxss */
page{
    background-color: #f2f2f2;
}
.comment-body{
    padding-top: 10rpx;
}
.comment-body-content{
    height: 416rpx;
    background-color: #fff;
    margin-bottom: 14rpx;
    position: relative;
}
.enter{
    margin-top: 20rpx;
    margin-left: 20rpx;
}
.comment-body-content-comment{
    padding: 20rpx 0 0 20rpx;
}
.comment-body-content-comment>text{
    display: block;
}
.comment-body-content-comment>text:first-child{
    font-size: 28rpx;
     font-weight: 600; 
    margin-bottom: 8rpx;
    color: #4d4d4d;
}
.comment-body-content-comment>text:nth-child(2){
    font-size: 24rpx;
    margin-bottom: 8rpx;    
    color: #4d4d4d;    
}
.comment-body-content-comment>text:nth-child(3){
    font-size: 28rpx;  
    color: #808080;  
}
.plgun{
    margin-top: -42rpx;
    margin-left: 120rpx;
}
.plgun .star{
    margin-right: 10rpx;
    height: 52rpx;
    width: 52rpx;
}
.comment-body-content-bottom{
    position: relative;
    margin-top: 28rpx;
    height: 202rpx;
    background-color: #f2f2f2;
    width: 710rpx;
    border-radius: 16rpx;
    padding: 10rpx 0 0 10rpx;
}
.comment-body-content-bottom-text{
    padding: 0 0 0 15rpx;
    font-size: 28rpx;
    height:102rpx;
    width:710rpx;
}
.comment-body-content-bottom-bg{
    position: absolute;
    width: 88rpx;
    height:88rpx;
    border:1px solid #808080;
    border-radius: 12rpx;
    left: 16rpx;
    bottom: 10rpx;
}
.comment-body-content-bottom image{
    margin:12rpx 0 0 25rpx; 
    height: 36rpx;
    width: 36rpx;
}
.comment-body-content-bottom-bg .comment-body-content-bottom-add{
    width: 100%;
    text-align: center;
    display: block;
    font-size: 18rpx;
}
.comment-body-foot{
    padding: 15rpx 0 0 22rpx;
    height: 139rpx;
    background-color: #ffffff;
}
.comment-body-foot .comment-body-foot-comment{
    display: block;
    font-size: 28rpx;
    color: #4d4d4d;
    font-weight: 700;
}
.comment-body-foot-shops{
    color: #9e9e9e;
    margin-right: 8rpx;
    font-size: 24rpx;
}
.comment-body-foot-plung{
    display: inline-block;
    height: 36rpx;
    width: 64rpx;
    line-height: 36rpx;
    border-radius: 10rpx;
    border: 1px solid #808080;
    font-size: 24rpx;
    text-align: center;
    margin-right: 12rpx;
}
.on{
    border: 1px solid #ffcf3d;
    color: #ffcf3d;
}