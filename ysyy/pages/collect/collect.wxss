/* pages/collect/collect.wxss */
.swiper-tab{  
    width: 100%;  
    border-bottom: 8rpx solid #f2f2f2;  
    border-top: 8rpx solid #f2f2f2;
    text-align: center;  
    line-height: 80rpx;}  
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width:50%;  
    color: #777777;  
    background-color: #f5f5f5;      
}  
.on{ 
    background-color: #fff;  
}

.collect-list{
    position: relative;
    height: 149rpx;
    border-bottom: 1px solid #cccccc;
}
.collect-list-goods{
    height: 100rpx;
    width: 100rpx;
    margin: 25rpx 0 0 25rpx;
}
.collect-list-title{
    position: absolute;
    top: 20rpx;
    left:150rpx;
    font-size: 28rpx;
    color: #4d4d4d;
    font-weight: 700;
}
.plgun{
    position: absolute;
    top: 54rpx;
    left: 150rpx;
}
.plgun .collect-list-sellPrice{
    display: block;
    color: #ffcd46;
    font-size: 24rpx;
    font-weight: 700;
}
.collect-list-car{
    width: 42rpx;
    height: 40rpx;
    position: absolute;
    right: 20rpx;
    bottom: 50rpx;
}
.collect-list-distance{
    position: absolute;
    right: 20rpx;
    bottom: 50rpx;
    font-size: 24rpx;
    color: #9e9e9e;
}

.goodsRecommend{
    border-top: 1px solid #cccccc;
    height:432rpx;
    width: 100%;
}
.goodsRecommend-slides{
    height: 432rpx;
}
.goodsRecommend-title{
    padding-left: 250rpx;
}
.goodsRecommend-line{
    height: 4rpx;
    width: 68rpx;
    background-color: #4d4d4d;
    display: inline-block;
    position: relative;
    bottom:8rpx;
}
.goodsRecommend-title text{
    font-size: 24rpx;
    color: #4d4d4d;
    padding: 0 12rpx;
    font-weight: 700;
}
.goodsRecommend-img{
    margin-top: 16rpx;
    width: 750rpx;
    height: 226rpx;
}
.goodsRecommend-detail-title{
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #4d4d4d;
    font-weight: 700;
}
.goodsRecommend-detail-suggest{
    margin:4rpx 0 0 20rpx;
    color: #808080;
}
.goodsRecommend-detail-price{
    position: absolute;
    bottom: -38rpx;
    color: #ffcd46;
    left: 20rpx;
}
.goodsRecommend-detail-cosPrice{
    position: absolute;
    font-size: 20rpx;
    bottom: -38rpx;
    color: #5f5f5f;
    left: 76rpx;
}
.goodsRecommend-detail-yuding{
    position: absolute;
    font-size: 22rpx;
    color: #fff;
    height: 36rpx;
    width: 126rpx;
    background-color: #ffcd46;
    line-height: 36rpx;
    text-align: center;
    border-radius:8rpx;
    right: 22rpx;
    bottom: -34rpx;
}